<div class="container">
	<% if admin_signed_in? %>
	<%= link_to('New Restaurant', new_restaurant_path, class: 'btn btn-success') %>
	<% end %>

	<% if @restaurants.empty? %>
		<h2>No Restaurants have been added yet!</h2>
	<% else %>
		<table class="table">
			<thead>
				<tr>
					<th>Logo</th>
					<th>Name</th>
					<th>Description</th>
					<th>Address</th>
					<th>Phone</th>
					<% if admin_signed_in? %>
					<th>Edit</th>
					<th>Destroy</th>
					<% end %>
				</tr>
			</thead>
			<tbody>
				<% @restaurants.each do |restaurant| %>
					<tr>
						<td><%= link_to(image_tag(restaurant.logo.thumb), restaurant) %></td>
						<td><%= restaurant.name %></td>
						<td><%= restaurant.description %></td>
						<td><%= restaurant.address %></td>
						<td><%= restaurant.phone %></td>
						<% if admin_signed_in? %>
						<td><%= link_to('Edit', edit_restaurant_path(restaurant)) %></td>
						<td><%= link_to('Destroy', restaurant, method: :delete,
														data: { confirm: 'Are you sure?' }) %></td>
						<% end %>
					</tr>
				<% end %>
			</tbody>
		</table>
	<% end %>

</div>